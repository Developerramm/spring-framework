<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    
    <bean class="com.app.beans.Car" id="car" abstract="true">
    
    	<property name="model" value="creta 2025"></property>
    	<property name="enginePower" value="2500"></property>
    	<property name="company" value="Hundai"></property>
    	
    
    </bean>
    
    
     <bean class="com.app.beans.Car" id="car1" parent = "car">
    	<property name="regNo" value="xh-45872000"></property>
    	<property name="tyre" value="mrf"></property>
    	<property name="fuelType" value="petrol"></property>
    </bean>
    
     <bean class="com.app.beans.Car" id="car2" parent = "car">
    	<property name="regNo" value="xh-52000"></property>
    	<property name="tyre" value="cate"></property>
    	<property name="fuelType" value="diesel"></property>
    </bean>
   
</beans>